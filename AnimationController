using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class AnimationController : MonoBehaviour
{
    Animator anim;  
    void Start()
    {
        anim = GetComponent<Animator>();  //이 스크립트를 갖는 게임 오브젝트의 Animator 컴포넌트를 가져온다.
    }

    void Update()
    {
        if (Input.GetKey(KeyCode.W) || Input.GetKey(KeyCode.A) || Input.GetKey(KeyCode.S) || Input.GetKey(KeyCode.D))  // 프레임 마다 키입력 정보를 받아온다.
        {
            anim.SetBool("IsRun", true); // W.A.S.D 키입력을 받았다면 animator에 설정한 parameter값(여기서는 bool값)을 설정 해줌으로써 애니메이션을 실행시킴
        }
        else
        {
            anim.SetBool("IsRun", false);
        }
    }
}
